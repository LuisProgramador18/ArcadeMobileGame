<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LID_Games_Arcade.MenuPausaPacMan"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title=""
             BackgroundImageSource="fondo_juego_pacman.png">

    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="3">
        <toolkit:MediaElement x:Name="audioTecla"
                              Source="embed://audio_tecla_arcade_dos.mp3"
                              IsVisible="false"
                              Speed="1"/>

        <ImageButton x:Name="playResumePacbtn"
                     Source="play.png"
                     WidthRequest="250"
                     HeightRequest="100"
                     BackgroundColor="Transparent"
                     Clicked="playResumePacbtn_Clicked"
                     Pressed="botonPresionado"
                     Released="botonLiberado"/>

    </VerticalStackLayout>
</ContentPage>